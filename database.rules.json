{
  "rules": {
    "site_content": {
      ".read": true,
      ".write": "auth != null"
    },
    "appointment_requests": {
      ".read": "auth != null",
      // Allow authenticated users to write (create/update/delete)
      // Allow anyone to create a *new* request.
      ".write": "auth != null || !data.exists()",
      ".indexOn": ["submittedAt"]
    },
    ".read": false,
    ".write": false
  }
}
